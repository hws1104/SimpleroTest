<div class="mx-auto w-5/6">
  <div class="grid grid-cols-3 gap-4">
    <div class="col-span-2 ...">
      <div class="flex justify-between items-center mt-5">
        <h1 class="font-bold text-3xl">
          <%= @post.title%>&nbsp;&nbsp;
        </h1>
      </div>
      <div class="min-w-full">
        <p>
          <%= @post.content %>
        </p>
      </div>

      <div class="flex justify-between items-center mt-5">
        <h1 class="font-bold text-2xl">Comments</h1>
      </div>
      <div id="comments" class="min-w-full mt-5">
        <% @comments.each do |comment| %>
          <%- if comment.persisted? %>
            <%= render 'comment', group: @group, post: @post, comment: comment %>
          <% end %>
        <% end %>
      </div>

      <div class="min-w-full mb-5">
        <%= render "form", group: @group, post: @post, comment: @post.comments.new %>
      </div>
    </div>
    
  </div>
</div>
